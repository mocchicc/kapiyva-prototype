<h1>Yes, Kapiyva!</h1>

<ul>
<% @articles.each do |article| %>
<li>
	<%= link_to article.title, article_path(article.id) %>
	<span class="edit"><%= link_to '[Edit]', edit_article_path(article.id) %></span>
	<span class="delete"><%= link_to "[Delete]", article_path(article.id), method: :delete, data:
		{ confirm: "本当に削除しますか?" } %></span>
</li>
<% end %>
</ul>


<p><%= link_to "記事を追加する", new_article_path %></p>
